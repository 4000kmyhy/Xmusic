<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/toolbar_left_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_toolbar_btn_selector"
        android:padding="10dp"
        android:tint="#ffffff"
        android:visibility="gone" />

    <EditText
        android:id="@+id/toolbar_input"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/bg_toolbar_edit"
        android:drawableLeft="@drawable/ic_toolbar_search"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="#606060"
        android:textColorHint="#a0a0a0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/toolbar_right_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_toolbar_btn_selector"
        android:gravity="center"
        android:text="搜索"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:visibility="gone" />

</LinearLayout>